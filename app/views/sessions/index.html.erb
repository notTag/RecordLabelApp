<p id="notice"><%= notice %></p>

<h1>Listing Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Bandname</th>
      <th>Sessiondate</th>
      <th>Sessiontime</th>
      <th>Sessionlength</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.bandName %></td>
        <td><%= session.sessionDate %></td>
        <td><%= session.sessionTime %></td>
        <td><%= session.sessionLength %></td>
        <td><%= session.comments %></td>
        <td><%= link_to 'Show', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

