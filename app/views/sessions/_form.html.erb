<%= form_for(@session) do |f| %>	
<% if @session.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:</h2>

	<ul>
		<% @session.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<!-- <%= f.label :bandName %><br>-->
	<div>
		Band Name
	</div>
	<%= f.text_field :bandName %>
</div>
<div class="field">
	<!-- <%= f.label :sessionDate %><br> -->
	<div>
		Session Date <br>Studio Hours 9am - 9pm. <br>Recording rooms closed for lunch 12pm-1pm.
	</div>
	<%= f.datetime_select :sessionDate %>
</div>
<div class="field">
	<!-- <%= f.label :sessionLength %> (Minutes)<br> -->
	<div>
		Session Length (165 minute sessions)
	</div>
	<!-- <%= f.time_select :sessionLength, :default => {:hour => '2', :minute => '45'}, :disabled => true%> -->
	<%= f.number_field :sessionLength, :value => 165, :min => 165, :max => 165 %>
</div>
<div class="field">
	<%= f.label :comments %>
	<br>
	<%= f.text_area :comments %>
</div>
<div class="actions">
	<%= f.submit %>
</div>

<% end %>


